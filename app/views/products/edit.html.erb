<h1>Edit product</h1>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :company %>
  <%= f.text_field :company %>
  <%= f.label :purpose %>
  <%= f.text_field :purpose %>
  <%= f.label :cost %>
  <%= f.number_field :cost %>
  <%= f.label :country_of_origin %>
  <%= f.text_field :country_of_origin %>
  <%= f.submit  %>
<% end %>
